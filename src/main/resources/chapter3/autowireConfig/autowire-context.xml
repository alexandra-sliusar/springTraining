<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="foo" class="chapter3.autowireConfig.Foo"/>
    <bean id="bar1" class="chapter3.autowireConfig.Bar"/>

    <bean id="targetByName" autowire="byName"
          class="chapter3.autowireConfig.Target"
          lazy-init="true"/>

    <bean id="targetByType" autowire="byType"
          class="chapter3.autowireConfig.Target"
          lazy-init="true"/>

    <bean id="targetConstructor" autowire="constructor"
          class="chapter3.autowireConfig.Target" lazy-init="true"/>
</beans>